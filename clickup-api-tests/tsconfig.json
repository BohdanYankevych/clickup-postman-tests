{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES6",
    "lib": ["ESNext", "es6", "DOM"],
    "module": "CommonJS",
    "rootDir": ".",                          // ðŸ‘ˆ Ð·Ð¼Ñ–Ð½Ð¸Ð² Ð· "src" Ð½Ð° "." Ñ‰Ð¾Ð± Ð²ÐºÐ»ÑŽÑ‡Ð¸Ñ‚Ð¸ cypress
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
